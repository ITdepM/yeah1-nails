datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id           String        @id @default(cuid())
  fullName     String?
  phone        String        @unique
  email        String?
  birthday     DateTime?
  totalPoints  Int           @default(0)
  inviteCode   InviteCode?
  invitedById  String?
  invitedBy    Customer?     @relation("Invited", fields: [invitedById], references: [id])
  referrals    Customer[]    @relation("Invited")
  visits       Visit[]
  createdAt    DateTime      @default(now())
}

model Visit {
  id            String      @id @default(cuid())
  customerId    String
  customer      Customer    @relation(fields: [customerId], references: [id])
  checkInAt     DateTime
  checkOutAt    DateTime?
  service       String?
  heard         String?
  pointsAwarded Int         @default(0)
}

model InviteCode {
  id         String     @id @default(cuid())
  code       String     @unique
  customer   Customer   @relation(fields: [customerId], references: [id])
  customerId String     @unique
  uses       Int        @default(0)
  maxUses    Int        @default(3)
}

model AdminLog {
  id        String   @id @default(cuid())
  action    String
  details   String
  createdAt DateTime @default(now())
}

model AppSettings {
  id              Int     @id @default(1)
  signupBonus     Int     @default(20)
  checkoutBonus   Int     @default(15)
  referralBonus   Int     @default(20) // only inviter
  redeemCost      Int     @default(150)
  maxReferralUses Int     @default(3)
}


